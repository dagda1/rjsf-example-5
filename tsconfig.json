{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build/dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/**.tsx"
  ]
}